doctype html
html(lang='en', ng-app='app')
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='user-scalable=no, initial-scale=1, minimum-scale=1, maximum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi')

    title ArtRoulette: Generator

    link(href='stylesheets/theme.css', type='text/css', rel='stylesheet', media='all')
    link(href='stylesheets/generator.css', type='text/css', rel='stylesheet', media='all')

    script(src='javascripts/angular.js', type='text/javascript')
    //- script(src='javascripts/angular-locale-en.js', type='text/javascript')
    script(src='javascripts/angular-route.js', type='text/javascript')
    script(src='javascripts/angular-bootstrap.js', type='text/javascript')

    script(src='javascripts/database.js', type='text/javascript')
    script(src='javascripts/generator.js', type='text/javascript')
  body
    generator(ng-controller='GeneratorController')
      cells
        cell.cell-1(slot-driver='', slot-selection='image1')
          ul.list-unstyled
            li(ng-repeat='choice in choices')
              img.img-responsive(ng-src='{{choice.url}}')
        cell.cell-2(slot-driver='', slot-selection='image2')
          ul.list-unstyled
            li(ng-repeat='choice in choices')
              img.img-responsive(ng-src='{{choice.url}}')
        cell.cell-3(slot-driver='', slot-selection='image3')
          ul.list-unstyled
            li(ng-repeat='choice in choices')
              img.img-responsive(ng-src='{{choice.url}}')
      .well.code
        button.btn.btn-success.pull-right(type='button', ng-click='generate()') I am feeling lucky!
        span This is your code:
        span {{code}}
