div(class='opaque')
 div(class='container')
  div(class='row')
    div(class='col-md-12')
      carousel(interval='sliderInterval')
        slide(class='item composition', ng-repeat='composition in compositions', active='composition.active')
          div(class='row')
            div(class='col-md-4 composition-img', ng-repeat='image in composition.images')
              img(ng-src='{{image.url}}', class='composition-img')
          h3(class='composition-author') {{composition.author}}
          p(class='composition-text') {{composition.text}}
 div(class='box box-fixed-bottom code')
  a(class='code-link') Entrez votre code
  div(class='container code-container')
   form(class='form', name='codeForm')
     div(class='row')
       div(class='col-md-12')
         span(class='alert alert-danger alert-block code-alert', data-ng-if='message') {{message}}
       div(class='col-md-12')
         input(type='text', name='code', class='form-control code-input', ng-model='code', placeholder='Votre code', required)
         input(type='submit', class='btn btn-default code-submit', data-ng-click='submit()')