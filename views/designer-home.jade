div(class='container')
 div(class='row')
   div(class='col-md-12')
     carousel(interval='sliderInterval')
       slide(class='item composition', ng-repeat='composition in compositions', active='composition.active')
         div(class='row')
           div(class='col-md-4 composition-img', ng-repeat='image in composition.images')
             img(ng-src='{{image.url}}', class='composition-img')
         h3 {{composition.title}}
         p {{composition.text}}
div(class='box box-fixed-bottom code')
 a(class='code-link') Entrez votre code
 div(class='container')
  div(class='row')
    div(class='col-md-12')
      form(class='form', ng-submit='processForm()')
        input(type='text', class='form-control code-input', ng-model='code', placeholder='Votre code')
        input(type='submit', class='btn btn-default code-submit')